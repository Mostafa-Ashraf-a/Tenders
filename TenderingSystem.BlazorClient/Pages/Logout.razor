@page "/logout"
@using TenderingSystem.BlazorClient.Services
@inject AuthService AuthService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>تسجيل الخروج</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16 text-center">
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
    <MudText Typo="Typo.h5" Class="mt-4">جاري تسجيل الخروج...</MudText>
</MudContainer>

@code {
    protected override async Task OnInitializedAsync()
    {
        await AuthService.LogoutAsync();
        Snackbar.Add("تم تسجيل الخروج بنجاح", Severity.Info);
        NavigationManager.NavigateTo("/login");
    }
}
